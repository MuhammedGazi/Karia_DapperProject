@model IEnumerable<ResultProductDto>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <h1 class="page-title mb-2">
                            <i class="bi bi-box-seam"></i> Ürün Yönetimi
                        </h1>
                        <p class="text-muted mb-0">Tüm ürünlerinizi buradan yönetebilirsiniz</p>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <a asp-action="Create" asp-controller="Product" class="btn btn-gradient-primary">
                            <i class="bi bi-plus-lg me-2"></i>Yeni Ürün Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <div class="product-card">
                        <div class="product-image-wrapper">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                            }
                            else
                            {
                                <div class="product-image-placeholder">
                                    <i class="bi bi-image"></i>
                                </div>
                            }
                            <span class="product-badge">@product.CategoryName</span>
                        </div>
                        <div class="product-body">
                            <h5 class="product-title">@product.Name</h5>
                            <p class="product-description">
                                @(product.Description?.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                            </p>
                            <div class="product-footer">
                                <div class="product-price">
                                    <span class="price-label">Fiyat:</span>
                                    <span class="price-value">@product.Price.ToString("N2") ₺</span>
                                </div>
                                <div class="product-actions">
                                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.ProductId"
                                       class="btn-action btn-info" title="Detaylar">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Update" asp-controller="Product" asp-route-id="@product.ProductId"
                                       class="btn-action btn-warning" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.ProductId"
                                       class="btn-action btn-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="empty-state">
                    <i class="bi bi-box-seam"></i>
                    <h3>Henüz Ürün Yok</h3>
                    <p>Yeni bir ürün ekleyerek başlayın</p>
                    <a asp-action="Create" asp-controller="Product" class="btn btn-gradient-primary mt-3">
                        <i class="bi bi-plus-lg me-2"></i>İlk Ürünü Ekle
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
        border-radius: 15px;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-gradient-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            color: white;
        }

    .product-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

    .product-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 75%;
        overflow: hidden;
        background: #f8f9fa;
    }

    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-image-placeholder {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        color: #6c757d;
        font-size: 3rem;
    }

    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(102, 126, 234, 0.95);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .product-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: #2d3748;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-description {
        color: #718096;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        flex-grow: 1;
        line-height: 1.5;
    }

    .product-footer {
        border-top: 1px solid #e2e8f0;
        padding-top: 1rem;
        margin-top: auto;
    }

    .product-price {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .price-label {
        color: #718096;
        font-size: 0.85rem;
    }

    .price-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #667eea;
    }

    .product-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-action {
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
    }

        .btn-action.btn-info {
            background: linear-gradient(135deg, #17a2b8, #138496);
        }

        .btn-action.btn-warning {
            background: linear-gradient(135deg, #ffc107, #ff9800);
        }

        .btn-action.btn-danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
        }

        .btn-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

        .empty-state i {
            font-size: 5rem;
            color: #cbd5e0;
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #718096;
            margin-bottom: 0;
        }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}

