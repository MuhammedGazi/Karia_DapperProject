@model IEnumerable<ResultVideoDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="video-gallery-wrapper">
    <!-- Animated Background -->
    <div class="animated-gradient">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
    </div>

    <div class="container-fluid px-4 py-5">
        <!-- Hero Section -->
        <div class="hero-section">
            <div class="hero-glass-card">
                <div class="hero-content">
                    <div class="hero-icon-wrapper">
                        <div class="icon-circle">
                            <i class="bi bi-play-circle-fill"></i>
                        </div>
                        <div class="icon-pulse"></div>
                    </div>
                    <div class="hero-text">
                        <h1 class="hero-title">Video Galerisi</h1>
                        <p class="hero-description">
                            Videolarınızı yönetin ve düzenleyin
                        </p>
                    </div>
                </div>
                <div class="hero-actions">
                    <a asp-action="Create" asp-controller="Video" class="btn-add-video">
                        <span class="btn-icon">
                            <i class="bi bi-plus-circle-fill"></i>
                        </span>
                        <span class="btn-label">Yeni Video Ekle</span>
                        <span class="btn-shine"></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Bar -->
        <div class="stats-bar">
            <div class="stat-item">
                <div class="stat-icon-box purple">
                    <i class="bi bi-collection-play"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@(Model?.Count() ?? 0)</span>
                    <span class="stat-label">Toplam Video</span>
                </div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
                <div class="stat-icon-box blue">
                    <i class="bi bi-eye-fill"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">--</span>
                    <span class="stat-label">Görüntülenme</span>
                </div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
                <div class="stat-icon-box orange">
                    <i class="bi bi-graph-up"></i>
                </div>
                <div class="stat-details">
                    <span class="stat-value">--</span>
                    <span class="stat-label">Bu Hafta</span>
                </div>
            </div>
        </div>

        <!-- Videos Grid -->
        @if (Model != null && Model.Any())
        {
            <div class="videos-grid">
                @foreach (var video in Model)
                {
                    <div class="video-card">
                        <div class="video-thumbnail">
                            @if (!string.IsNullOrEmpty(video.BackgroundImageUrl))
                            {
                                <img src="@video.BackgroundImageUrl" alt="Video thumbnail" class="thumbnail-image" />
                            }
                            else
                            {
                                <div class="thumbnail-placeholder">
                                    <i class="bi bi-play-btn"></i>
                                    <span>Arka Plan Yok</span>
                                </div>
                            }
                            <div class="video-overlay">
                                <a href="@video.Url" target="_blank" class="play-button">
                                    <i class="bi bi-play-fill"></i>
                                </a>
                            </div>
                            <div class="video-badge">
                                <i class="bi bi-camera-video"></i>
                                <span>Video</span>
                            </div>
                        </div>

                        <div class="video-content">
                            <div class="video-header">
                                <span class="video-id">ID: @video.VideoId</span>
                                <div class="video-status">
                                    <span class="status-dot"></span>
                                    <span>Aktif</span>
                                </div>
                            </div>

                            <div class="video-url-section">
                                <label class="url-label">
                                    <i class="bi bi-link-45deg"></i>
                                    Video URL
                                </label>
                                <div class="url-display">
                                    <input type="text"
                                           value="@video.Url"
                                           readonly
                                           class="url-input"
                                           onclick="this.select()" />
                                    <button class="copy-btn" onclick="navigator.clipboard.writeText('@video.Url')" title="Kopyala">
                                        <i class="bi bi-clipboard"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="video-actions">
                                <a asp-action="Details" asp-controller="Video" asp-route-id="@video.VideoId"
                                   class="video-action-btn view">
                                    <i class="bi bi-eye"></i>
                                    <span>Detay</span>
                                </a>
                                <a asp-action="Update" asp-controller="Video" asp-route-id="@video.VideoId"
                                   class="video-action-btn edit">
                                    <i class="bi bi-pencil-square"></i>
                                    <span>Düzenle</span>
                                </a>
                                <a asp-action="Delete" asp-controller="Video" asp-route-id="@video.VideoId"
                                   class="video-action-btn delete">
                                    <i class="bi bi-trash3"></i>
                                    <span>Sil</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state-section">
                <div class="empty-state-card">
                    <div class="empty-animation">
                        <i class="bi bi-camera-video"></i>
                    </div>
                    <h2 class="empty-title">Henüz Video Eklenmemiş</h2>
                    <p class="empty-text">İlk videonuzu ekleyerek galerinizi oluşturmaya başlayın</p>
                    <a asp-action="Create" asp-controller="Video" class="btn-empty-action">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>İlk Videoyu Ekle</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .video-gallery-wrapper {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        position: relative;
        overflow: hidden;
    }

    .animated-gradient {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        animation: float-orb 20s ease-in-out infinite;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: rgba(139, 92, 246, 0.3);
        top: -250px;
        left: -250px;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: rgba(59, 130, 246, 0.3);
        top: 50%;
        right: -200px;
        animation-delay: 7s;
    }

    .orb-3 {
        width: 600px;
        height: 600px;
        background: rgba(16, 185, 129, 0.2);
        bottom: -300px;
        left: 30%;
        animation-delay: 14s;
    }

    @@keyframes float-orb {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        33% {
            transform: translate(30px, -30px) scale(1.1);
        }

        66% {
            transform: translate(-30px, 30px) scale(0.9);
        }
    }

    .hero-section {
        position: relative;
        z-index: 10;
        margin-bottom: 3rem;
    }

    .hero-glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 30px;
        padding: 2.5rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .hero-content {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex: 1;
    }

    .hero-icon-wrapper {
        position: relative;
    }

    .icon-circle {
        width: 90px;
        height: 90px;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        box-shadow: 0 10px 40px rgba(139, 92, 246, 0.5);
        position: relative;
        z-index: 2;
    }

    .icon-pulse {
        position: absolute;
        top: 0;
        left: 0;
        width: 90px;
        height: 90px;
        border-radius: 50%;
        background: rgba(139, 92, 246, 0.4);
        animation: pulse-ring 2s ease-out infinite;
    }

    @@keyframes pulse-ring {
        0% {
            transform: scale(1);
            opacity: 1;
        }

        100% {
            transform: scale(1.5);
            opacity: 0;
        }
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 900;
        color: white;
        margin: 0 0 0.5rem 0;
        text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    }

    .hero-description {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.8);
        margin: 0;
    }

    .btn-add-video {
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem 2.5rem;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        color: white;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        z-index: 10;
        cursor: pointer;
    }

        .btn-add-video:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(139, 92, 246, 0.6);
            color: white;
        }

    .btn-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn-add-video:hover .btn-shine {
        left: 100%;
    }

    .stats-bar {
        position: relative;
        z-index: 10;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 25px;
        padding: 2rem;
        margin-bottom: 3rem;
        display: flex;
        justify-content: space-around;
        align-items: center;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        flex-wrap: wrap;
        gap: 2rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .stat-icon-box {
        width: 70px;
        height: 70px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }

        .stat-icon-box.purple {
            background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        }

        .stat-icon-box.blue {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        }

        .stat-icon-box.orange {
            background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
        }

    .stat-value {
        display: block;
        font-size: 2.5rem;
        font-weight: 900;
        color: white;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        display: block;
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.7);
        font-weight: 600;
    }

    .stat-divider {
        width: 1px;
        height: 60px;
        background: rgba(255, 255, 255, 0.1);
    }

    .videos-grid {
        position: relative;
        z-index: 10;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 2rem;
    }

    .video-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        transition: all 0.4s ease;
    }

        .video-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            border-color: rgba(139, 92, 246, 0.3);
        }

    .video-thumbnail {
        position: relative;
        width: 100%;
        padding-top: 56.25%;
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        overflow: hidden;
    }

    .thumbnail-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .video-card:hover .thumbnail-image {
        transform: scale(1.1);
    }

    .thumbnail-placeholder {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.3);
        gap: 1rem;
    }

        .thumbnail-placeholder i {
            font-size: 4rem;
        }

    .video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .video-card:hover .video-overlay {
        opacity: 1;
    }

    .play-button {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
        text-decoration: none;
        box-shadow: 0 10px 30px rgba(139, 92, 246, 0.5);
        transition: all 0.3s ease;
        padding-left: 5px;
        cursor: pointer;
        z-index: 20;
        position: relative;
    }

        .play-button:hover {
            transform: scale(1.2);
            box-shadow: 0 15px 40px rgba(139, 92, 246, 0.7);
        }

    .video-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        color: white;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .video-content {
        padding: 1.75rem;
    }

    .video-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .video-id {
        font-size: 0.9rem;
        font-weight: 700;
        color: #8b5cf6;
        background: rgba(139, 92, 246, 0.1);
        padding: 0.5rem 1rem;
        border-radius: 12px;
    }

    .video-status {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background: #10b981;
        border-radius: 50%;
        animation: pulse-dot 2s ease-in-out infinite;
    }

    @@keyframes pulse-dot {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.5;
            transform: scale(1.2);
        }
    }

    .video-url-section {
        margin-bottom: 1.5rem;
    }

    .url-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .url-display {
        display: flex;
        gap: 0.5rem;
    }

    .url-input {
        flex: 1;
        padding: 0.75rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.85rem;
        font-family: 'Courier New', monospace;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .url-input:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.1);
            border-color: #8b5cf6;
        }

    .copy-btn {
        width: 45px;
        height: 45px;
        background: rgba(139, 92, 246, 0.2);
        border: 1px solid rgba(139, 92, 246, 0.3);
        border-radius: 12px;
        color: #8b5cf6;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        z-index: 20;
        position: relative;
    }

        .copy-btn:hover {
            background: #8b5cf6;
            color: white;
            transform: scale(1.1);
        }

    .video-actions {
        display: flex;
        gap: 0.75rem;
        position: relative;
        z-index: 20;
    }

    .video-action-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.9rem 1rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
        z-index: 25;
        position: relative;
    }

        .video-action-btn.view {
            background: rgba(59, 130, 246, 0.2);
            border: 1px solid rgba(59, 130, 246, 0.3);
            color: #3b82f6;
        }

            .video-action-btn.view:hover {
                background: #3b82f6;
                color: white;
                transform: translateY(-2px);
            }

        .video-action-btn.edit {
            background: rgba(251, 146, 60, 0.2);
            border: 1px solid rgba(251, 146, 60, 0.3);
            color: #fb923c;
        }

            .video-action-btn.edit:hover {
                background: #fb923c;
                color: white;
                transform: translateY(-2px);
            }

        .video-action-btn.delete {
            background: rgba(239, 68, 68, 0.2);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

            .video-action-btn.delete:hover {
                background: #ef4444;
                color: white;
                transform: translateY(-2px);
            }

    .empty-state-section {
        position: relative;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
    }

    .empty-state-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 30px;
        padding: 4rem 3rem;
        text-align: center;
        max-width: 500px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .empty-animation {
        font-size: 7rem;
        color: rgba(255, 255, 255, 0.2);
        margin-bottom: 2rem;
        animation: bounce-slow 3s ease-in-out infinite;
    }

    @@keyframes bounce-slow {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    .empty-title {
        font-size: 2rem;
        font-weight: 800;
        color: white;
        margin: 0 0 1rem 0;
    }

    .empty-text {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.7);
        margin: 0 0 2rem 0;
    }

    .btn-empty-action {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2.5rem;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        color: white;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
        transition: all 0.3s ease;
    }

        .btn-empty-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(139, 92, 246, 0.6);
            color: white;
        }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }

        .videos-grid {
            grid-template-columns: 1fr;
        }

        .hero-glass-card {
            flex-direction: column;
            text-align: center;
        }

        .hero-content {
            flex-direction: column;
        }

        .stats-bar {
            flex-direction: column;
        }

        .stat-divider {
            width: 60px;
            height: 1px;
        }
    }
</style>

