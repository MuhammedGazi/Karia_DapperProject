@model CreateVideoDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="create-video-wrapper">
    <!-- Dynamic Background -->
    <div class="video-bg-pattern"></div>
    <div class="floating-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
    </div>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-9">
                <!-- Navigation -->
                <div class="nav-bar">
                    <a asp-action="Index" asp-controller="Video" class="nav-back-btn">
                        <i class="bi bi-arrow-left-circle"></i>
                        <span>Video Galerisine Dön</span>
                    </a>
                    <div class="nav-indicator">
                        <span class="indicator-dot"></span>
                        <span>Yeni Video Ekleniyor</span>
                    </div>
                </div>

                <!-- Main Form Card -->
                <div class="create-form-card">
                    <div class="card-header-section">
                        <div class="header-decoration">
                            <div class="decoration-box box-1"></div>
                            <div class="decoration-box box-2"></div>
                            <div class="decoration-box box-3"></div>
                        </div>
                        <div class="header-icon-large">
                            <i class="bi bi-play-btn-fill"></i>
                        </div>
                        <div class="header-content">
                            <h1 class="form-title">Yeni Video Ekle</h1>
                            <p class="form-subtitle">Video URL'si ve arka plan görselini ekleyerek yeni video oluşturun</p>
                        </div>
                    </div>

                    <form method="post" asp-action="Create" asp-controller="Video" id="videoForm">
                        <div class="form-body">
                            <!-- Video URL Section -->
                            <div class="input-section">
                                <div class="section-number">01</div>
                                <div class="section-content">
                                    <div class="section-header">
                                        <div class="section-icon">
                                            <i class="bi bi-link-45deg"></i>
                                        </div>
                                        <div class="section-info">
                                            <h3 class="section-title">Video URL</h3>
                                            <p class="section-desc">YouTube, Vimeo veya diğer video platformlarından URL ekleyin</p>
                                        </div>
                                    </div>

                                    <div class="input-wrapper">
                                        <input type="text"
                                               class="modern-input"
                                               asp-for="Url"
                                               placeholder="https://www.youtube.com/watch?v=..."
                                               id="videoUrlInput"
                                               required />
                                        <div class="input-border-effect"></div>
                                        <div class="input-icon">
                                            <i class="bi bi-camera-video"></i>
                                        </div>
                                    </div>

                                    <div class="input-hints">
                                        <div class="hint-item">
                                            <i class="bi bi-check-circle"></i>
                                            <span>YouTube, Vimeo veya benzeri platformlar desteklenir</span>
                                        </div>
                                        <div class="hint-item">
                                            <i class="bi bi-check-circle"></i>
                                            <span>Geçerli bir video URL'si giriniz</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Background Image Section -->
                            <div class="input-section">
                                <div class="section-number">02</div>
                                <div class="section-content">
                                    <div class="section-header">
                                        <div class="section-icon">
                                            <i class="bi bi-image"></i>
                                        </div>
                                        <div class="section-info">
                                            <h3 class="section-title">Arka Plan Görseli</h3>
                                            <p class="section-desc">Video için thumbnail/kapak görseli URL'si</p>
                                        </div>
                                    </div>

                                    <div class="preview-and-input">
                                        <div class="image-preview-box" id="imagePreviewBox">
                                            <div class="preview-placeholder">
                                                <i class="bi bi-image-fill"></i>
                                                <p>Görsel Önizlemesi</p>
                                                <span>URL girildiğinde görsel burada görünecek</span>
                                            </div>
                                        </div>

                                        <div class="input-wrapper">
                                            <input type="text"
                                                   class="modern-input"
                                                   asp-for="BackgroundImageUrl"
                                                   placeholder="https://example.com/image.jpg"
                                                   id="imageUrlInput" />
                                            <div class="input-border-effect"></div>
                                            <div class="input-icon">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="image-tips">
                                        <div class="tip-box">
                                            <i class="bi bi-info-circle-fill"></i>
                                            <div class="tip-content">
                                                <strong>Önerilen Boyutlar:</strong>
                                                <span>1920x1080 piksel (16:9 oran)</span>
                                            </div>
                                        </div>
                                        <div class="tip-box">
                                            <i class="bi bi-file-image"></i>
                                            <div class="tip-content">
                                                <strong>Dosya Formatı:</strong>
                                                <span>JPG, PNG veya WebP</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-actions">
                            <button type="button" onclick="history.back()" class="btn-action btn-cancel">
                                <i class="bi bi-x-circle"></i>
                                <span>İptal</span>
                            </button>
                            <button type="reset" class="btn-action btn-reset" id="resetBtn">
                                <i class="bi bi-arrow-counterclockwise"></i>
                                <span>Temizle</span>
                            </button>
                            <button type="submit" class="btn-action btn-submit">
                                <span class="btn-glow-effect"></span>
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Video Ekle</span>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Info Card -->
                <div class="info-card">
                    <i class="bi bi-lightbulb"></i>
                    <div class="info-content">
                        <strong>İpucu:</strong> Video URL'si doğru formatta olmalıdır. YouTube videoları için
                        "watch?v=" içeren linki kullanın. Vimeo için direkt video linkini kullanabilirsiniz.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .create-video-wrapper {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
        position: relative;
        overflow: hidden;
    }

    .video-bg-pattern {
        position: absolute;
        width: 100%;
        height: 100%;
        background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(139, 92, 246, 0.03) 35px, rgba(139, 92, 246, 0.03) 70px);
        pointer-events: none;
    }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        background: radial-gradient(circle, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
        border-radius: 50%;
        animation: float-shape 15s ease-in-out infinite;
    }

    .shape-1 {
        width: 300px;
        height: 300px;
        top: 10%;
        left: 5%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 200px;
        height: 200px;
        top: 60%;
        right: 10%;
        animation-delay: 3s;
    }

    .shape-3 {
        width: 250px;
        height: 250px;
        bottom: 10%;
        left: 40%;
        animation-delay: 6s;
    }

    .shape-4 {
        width: 180px;
        height: 180px;
        top: 40%;
        right: 30%;
        animation-delay: 9s;
    }

    @@keyframes float-shape {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        33% {
            transform: translate(20px, -20px) scale(1.1);
        }

        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }

    .nav-bar {
        position: relative;
        z-index: 10;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.75rem;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        margin-bottom: 2rem;
    }

    .nav-back-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: white;
        text-decoration: none;
        font-weight: 600;
        padding: 0.75rem 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .nav-back-btn:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(-5px);
            color: white;
        }

    .nav-indicator {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 600;
        font-size: 0.95rem;
    }

    .indicator-dot {
        width: 10px;
        height: 10px;
        background: #10b981;
        border-radius: 50%;
        animation: pulse-indicator 2s ease-in-out infinite;
    }

    @@keyframes pulse-indicator {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.5;
            transform: scale(1.2);
        }
    }

    .create-form-card {
        position: relative;
        z-index: 10;
        background: rgba(255, 255, 255, 0.98);
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
    }

    .card-header-section {
        position: relative;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        padding: 3rem;
        display: flex;
        align-items: center;
        gap: 2rem;
        overflow: hidden;
    }

    .header-decoration {
        position: absolute;
        top: -20px;
        right: -20px;
        width: 200px;
        height: 200px;
    }

    .decoration-box {
        position: absolute;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        animation: rotate-box 20s linear infinite;
    }

    .box-1 {
        width: 80px;
        height: 80px;
        top: 0;
        right: 0;
    }

    .box-2 {
        width: 60px;
        height: 60px;
        top: 30px;
        right: 90px;
        animation-delay: 2s;
    }

    .box-3 {
        width: 40px;
        height: 40px;
        top: 100px;
        right: 40px;
        animation-delay: 4s;
    }

    @@keyframes rotate-box {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .header-icon-large {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3.5rem;
        flex-shrink: 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .form-title {
        font-size: 2.5rem;
        font-weight: 900;
        color: white;
        margin: 0 0 0.5rem 0;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .form-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.9);
        margin: 0;
    }

    .form-body {
        padding: 3rem;
    }

    .input-section {
        display: flex;
        gap: 2rem;
        margin-bottom: 3rem;
        position: relative;
    }

    .section-number {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 900;
        flex-shrink: 0;
        box-shadow: 0 5px 20px rgba(139, 92, 246, 0.4);
    }

    .section-content {
        flex: 1;
    }

    .section-header {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .section-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #8b5cf6;
        font-size: 1.8rem;
        flex-shrink: 0;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: #1e293b;
        margin: 0 0 0.5rem 0;
    }

    .section-desc {
        font-size: 1rem;
        color: #64748b;
        margin: 0;
    }

    .input-wrapper {
        position: relative;
        margin-bottom: 1rem;
    }

    .modern-input {
        width: 100%;
        padding: 1.25rem 3.5rem 1.25rem 1.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        font-size: 1.1rem;
        color: #1e293b;
        transition: all 0.3s ease;
        background: white;
    }

        .modern-input:focus {
            outline: none;
            border-color: transparent;
            background: #f8fafc;
        }

            .modern-input:focus + .input-border-effect {
                width: 100%;
            }

    .input-border-effect {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, #8b5cf6, #3b82f6);
        transition: width 0.4s ease;
        border-radius: 15px;
    }

    .input-icon {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 1.5rem;
        pointer-events: none;
    }

    .input-hints {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .hint-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: #64748b;
        font-size: 0.95rem;
    }

        .hint-item i {
            color: #10b981;
            font-size: 1.1rem;
        }

    .preview-and-input {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .image-preview-box {
        width: 100%;
        aspect-ratio: 16/9;
        border: 3px dashed #cbd5e0;
        border-radius: 20px;
        background: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .image-preview-box:hover {
            border-color: #8b5cf6;
            background: #f1f5f9;
        }

    .preview-placeholder {
        text-align: center;
        color: #94a3b8;
    }

        .preview-placeholder i {
            font-size: 4rem;
            margin-bottom: 1rem;
            display: block;
        }

        .preview-placeholder p {
            font-size: 1.2rem;
            font-weight: 700;
            margin: 0 0 0.5rem 0;
            color: #64748b;
        }

        .preview-placeholder span {
            font-size: 0.9rem;
        }

    .preview-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-tips {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .tip-box {
        display: flex;
        align-items: start;
        gap: 1rem;
        padding: 1rem;
        background: #f8fafc;
        border-radius: 12px;
        border-left: 4px solid #8b5cf6;
    }

        .tip-box i {
            color: #8b5cf6;
            font-size: 1.5rem;
            flex-shrink: 0;
        }

    .tip-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

        .tip-content strong {
            color: #1e293b;
            font-size: 0.95rem;
        }

        .tip-content span {
            color: #64748b;
            font-size: 0.9rem;
        }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        padding: 2rem 3rem;
        background: #f8fafc;
        border-top: 2px solid #e2e8f0;
    }

    .btn-action {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        border: none;
        border-radius: 15px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-cancel {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-cancel:hover {
            background: #e2e8f0;
            transform: translateY(-2px);
        }

    .btn-reset {
        background: #fef3c7;
        color: #d97706;
    }

        .btn-reset:hover {
            background: #fde68a;
            transform: translateY(-2px);
        }

    .btn-submit {
        background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
        color: white;
        box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
        padding: 1rem 2.5rem;
    }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(139, 92, 246, 0.6);
        }

    .btn-glow-effect {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
        transform: scale(0);
        transition: transform 0.6s ease;
    }

    .btn-submit:hover .btn-glow-effect {
        transform: scale(1);
    }

    .info-card {
        position: relative;
        z-index: 10;
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(251, 191, 36, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(251, 191, 36, 0.2);
        border-radius: 20px;
        display: flex;
        align-items: start;
        gap: 1rem;
        color: #fbbf24;
    }

        .info-card i {
            font-size: 1.5rem;
            flex-shrink: 0;
        }

    .info-content {
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .card-header-section {
            flex-direction: column;
            text-align: center;
        }

        .input-section {
            flex-direction: column;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageInput = document.getElementById('imageUrlInput');
            const previewBox = document.getElementById('imagePreviewBox');

            // Image preview
            imageInput.addEventListener('input', function() {
                const url = this.value.trim();
                if (url) {
                    previewBox.innerHTML = `<img src="${url}" class="preview-image" onerror="this.parentElement.innerHTML='<div class=\\'preview-placeholder\\'><i class=\\'bi bi-exclamation-triangle\\'></i><p>Geçersiz Görsel URL</p><span>Lütfen geçerli bir görsel linki girin</span></div>'">`;
                } else {
                    previewBox.innerHTML = '<div class="preview-placeholder"><i class="bi bi-image-fill"></i><p>Görsel Önizlemesi</p><span>URL girildiğinde görsel burada görünecek</span></div>';
                }
            });

            // Reset button
            document.getElementById('resetBtn').addEventListener('click', function() {
                setTimeout(() => {
                    previewBox.innerHTML = '<div class="preview-placeholder"><i class="bi bi-image-fill"></i><p>Görsel Önizlemesi</p><span>URL girildiğinde görsel burada görünecek</span></div>';
                }, 0);
            });
        });
    </script>
}

