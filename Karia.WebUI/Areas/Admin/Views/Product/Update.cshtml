@model UpdateProductDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="update-header mb-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center">
                            <div class="icon-wrapper me-3">
                                <i class="bi bi-pencil-square"></i>
                            </div>
                            <div>
                                <h2 class="header-title mb-1">Ürün Düzenle</h2>
                                <p class="header-subtitle mb-0">Ürün bilgilerini güncelleyin</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <a asp-action="Index" asp-controller="Product" class="btn btn-light-header">
                            <i class="bi bi-grid-3x3 me-2"></i>Tüm Ürünler
                        </a>
                    </div>
                </div>
            </div>

            <!-- Form Card -->
            <div class="update-card">
                <form method="post" asp-action="Update" asp-controller="Product">
                    <input type="hidden" asp-for="ProductId" />

                    <!-- Product ID Display -->
                    <div class="product-id-banner mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <span class="id-label">Ürün ID:</span>
                                <span class="id-value">#@Model.ProductId</span>
                            </div>
                            <div class="col-md-6 text-md-end mt-2 mt-md-0">
                                <span class="status-badge">
                                    <i class="bi bi-pencil me-1"></i>Düzenleniyor
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <!-- Sol Panel -->
                        <div class="col-lg-8">
                            <!-- Temel Bilgiler -->
                            <div class="update-section mb-4">
                                <div class="section-header">
                                    <h5 class="section-title">
                                        <i class="bi bi-info-circle-fill me-2"></i>Temel Bilgiler
                                    </h5>
                                </div>
                                <div class="section-body">
                                    <div class="mb-4">
                                        <label class="modern-label">
                                            <span class="label-icon">📦</span>
                                            Ürün Adı
                                        </label>
                                        <input type="text" class="form-control modern-input"
                                               asp-for="Name" placeholder="Ürün adını giriniz" />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label class="modern-label">
                                                <span class="label-icon">💰</span>
                                                Fiyat
                                            </label>
                                            <div class="price-input-group">
                                                <input type="number" step="0.01" class="form-control modern-input"
                                                       asp-for="Price" placeholder="0.00" />
                                                <span class="currency-symbol">TL</span>
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-4">
                                            <label class="modern-label">
                                                <span class="label-icon">📁</span>
                                                Kategori
                                            </label>
                                            <select class="form-select form-control-modern"
                                                    asp-for="CategoryId"
                                                    asp-items="@ViewBag.Categories">
                                                <option value="">Kategori Seçiniz...</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label class="modern-label">
                                            <span class="label-icon">📝</span>
                                            Ürün Açıklaması
                                        </label>
                                        <textarea class="form-control modern-input modern-textarea"
                                                  asp-for="Description" rows="6"
                                                  placeholder="Ürününüz hakkında detaylı bilgi..."></textarea>
                                        <div class="char-counter mt-2">
                                            <i class="bi bi-text-left me-1"></i>
                                            <span id="charCount">0</span> / 500 karakter
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ Panel -->
                        <div class="col-lg-4">
                            <!-- Görsel Yönetimi -->
                            <div class="update-section mb-4">
                                <div class="section-header">
                                    <h5 class="section-title">
                                        <i class="bi bi-image-fill me-2"></i>Ürün Görseli
                                    </h5>
                                </div>
                                <div class="section-body">
                                    <div class="image-manager mb-3">
                                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                        {
                                            <div class="current-image">
                                                <img src="@Model.ImageUrl" alt="@Model.Name" />
                                                <div class="image-overlay">
                                                    <i class="bi bi-eye"></i>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="no-image">
                                                <i class="bi bi-image"></i>
                                                <p>Görsel Yok</p>
                                            </div>
                                        }
                                    </div>

                                    <div class="mb-3">
                                        <label class="modern-label">
                                            <span class="label-icon">🔗</span>
                                            Görsel URL
                                        </label>
                                        <input type="text" class="form-control modern-input"
                                               asp-for="ImageUrl" placeholder="https://..." />
                                    </div>
                                </div>
                            </div>

                            <!-- Hızlı İşlemler -->
                            <div class="quick-actions">
                                <h6 class="quick-title">
                                    <i class="bi bi-lightning-fill me-2"></i>Hızlı İşlemler
                                </h6>
                                <div class="action-buttons">
                                    <button type="button" class="action-btn preview-btn">
                                        <i class="bi bi-eye"></i>
                                        <span>Önizle</span>
                                    </button>
                                    <button type="button" class="action-btn duplicate-btn">
                                        <i class="bi bi-files"></i>
                                        <span>Çoğalt</span>
                                    </button>
                                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.ProductId"
                                       class="action-btn delete-btn">
                                        <i class="bi bi-trash"></i>
                                        <span>Sil</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Footer -->
                    <div class="action-footer">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="save-info">
                                    <i class="bi bi-clock-history me-2"></i>
                                    Son güncelleme otomatik kaydedilecek
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="button-group">
                                    <a asp-action="Index" asp-controller="Product" class="btn btn-cancel">
                                        <i class="bi bi-x-lg me-2"></i>İptal
                                    </a>
                                    <button type="submit" class="btn btn-save">
                                        <i class="bi bi-check-lg me-2"></i>Değişiklikleri Kaydet
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Success Message (Hidden by default) -->
            <div class="success-message mt-4" style="display: none;">
                <i class="bi bi-check-circle-fill"></i>
                <div>
                    <strong>Başarılı!</strong> Ürün bilgileri başarıyla güncellendi.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f0f2f5;
        min-height: 100vh;
    }

    .update-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 2rem;
        border-radius: 20px;
        color: white;
        box-shadow: 0 10px 40px rgba(240, 147, 251, 0.3);
    }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        background: rgba(255,255,255,0.2);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        backdrop-filter: blur(10px);
    }

    .header-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
    }

    .header-subtitle {
        font-size: 0.95rem;
        opacity: 0.9;
    }

    .btn-light-header {
        background: rgba(255,255,255,0.95);
        color: #f5576c;
        border: none;
        font-weight: 600;
        padding: 0.7rem 1.5rem;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-light-header:hover {
            background: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .update-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 5px 30px rgba(0,0,0,0.08);
    }

    .product-id-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1.5rem;
        border-radius: 15px;
        color: white;
    }

    .id-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .id-value {
        font-size: 1.5rem;
        font-weight: 700;
        margin-left: 0.5rem;
    }

    .status-badge {
        background: rgba(255,255,255,0.2);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .update-section {
        background: #f8f9fc;
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .section-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1rem 1.5rem;
        color: white;
    }

    .section-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 700;
    }

    .section-body {
        padding: 2rem 1.5rem;
        background: white;
    }

    .modern-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #2d3748;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .label-icon {
        font-size: 1.2rem;
    }

    .modern-input {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 0.8rem 1rem;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .modern-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
            background: #f8f9fc;
        }

    .modern-textarea {
        resize: vertical;
        min-height: 150px;
    }

    .price-input-group {
        position: relative;
    }

    .currency-symbol {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .char-counter {
        color: #718096;
        font-size: 0.85rem;
        text-align: right;
    }

    .image-manager {
        border: 2px dashed #cbd5e0;
        border-radius: 12px;
        overflow: hidden;
        aspect-ratio: 1;
    }

    .current-image {
        position: relative;
        width: 100%;
        height: 100%;
    }

        .current-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        color: white;
        font-size: 2rem;
    }

    .current-image:hover .image-overlay {
        opacity: 1;
    }

    .no-image {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: #cbd5e0;
    }

        .no-image i {
            font-size: 3rem;
            margin-bottom: 0.5rem;
        }

        .no-image p {
            margin: 0;
            font-size: 0.9rem;
            color: #718096;
        }

    .quick-actions {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 1.5rem;
        border-radius: 15px;
        color: white;
    }

    .quick-title {
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .action-btn {
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 0.75rem 1rem;
        border-radius: 10px;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.3s ease;
        text-decoration: none;
        backdrop-filter: blur(10px);
    }

        .action-btn:hover {
            background: rgba(255,255,255,0.3);
            transform: translateX(5px);
            color: white;
        }

        .action-btn i {
            font-size: 1.1rem;
        }

    .action-footer {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #f1f5f9;
    }

    .save-info {
        color: #718096;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }

    .button-group {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }

    .btn-cancel {
        background: #f1f5f9;
        color: #4a5568;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #e2e8f0;
            transform: translateY(-2px);
        }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        }

    .success-message {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 15px;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 5px 20px rgba(17, 153, 142, 0.3);
    }

        .success-message i {
            font-size: 1.5rem;
        }

</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        // Karakter sayacı
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea[asp-for="Description"]');
            const charCount = document.getElementById('charCount');

            if (textarea && charCount) {
                function updateCount() {
                    charCount.textContent = textarea.value.length;
                }

                textarea.addEventListener('input', updateCount);
                updateCount();
            }
        });
    </script>
}



