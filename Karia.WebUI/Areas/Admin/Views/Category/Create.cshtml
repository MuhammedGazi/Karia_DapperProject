@model CreateCategoryDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <h2 class="mb-0 text-center">
                        <i class="bi bi-plus-circle-fill me-2"></i>Yeni Kategori Ekle
                    </h2>
                </div>
                <div class="card-body p-5">
                    <form method="post" asp-action="Create" asp-controller="Category">
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">
                                <i class="bi bi-tag-fill text-primary me-2"></i>Kategori Adı
                            </label>
                            <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Kategori adını giriniz..." />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-5">
                            <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <strong>Bilgi:</strong> Kategori adı en az 2 karakter olmalıdır.
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .alert {
        border-radius: 10px;
        border: none;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}



