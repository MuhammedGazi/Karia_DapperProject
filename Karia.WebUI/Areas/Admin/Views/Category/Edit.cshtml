@model UpdateCategoryDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-4">
                    <h2 class="mb-0 text-center">
                        <i class="bi bi-pencil-square me-2"></i>Kategori Güncelle
                    </h2>
                </div>
                <div class="card-body p-5">
                    <form method="post" asp-action="Edit" asp-controller="Category">
                        <input type="hidden" asp-for="CategoryId" />

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">
                                <i class="bi bi-hash text-warning me-2"></i>Kategori ID
                            </label>
                            <input type="text" class="form-control form-control-lg" value="@Model.CategoryId" disabled readonly />
                            <small class="form-text text-muted">Kategori ID değiştirilemez</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">
                                <i class="bi bi-tag-fill text-warning me-2"></i>Kategori Adı
                            </label>
                            <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Kategori adını giriniz..." />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-5">
                            <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 text-dark fw-bold">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-warning mt-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Uyarı:</strong> Kategori adını değiştirdiğinizde, bu kategoriye bağlı tüm içerikler etkilenecektir.
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.15);
        }

        .form-control:disabled {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .alert {
        border-radius: 10px;
        border: none;
    }

    .form-text {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}



