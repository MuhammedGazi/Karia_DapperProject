@model UpdateTestimonialDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="update-testimonial-wrapper">
    <!-- Gradient Mesh Background -->
    <div class="gradient-mesh">
        <div class="mesh-layer layer-1"></div>
        <div class="mesh-layer layer-2"></div>
        <div class="mesh-layer layer-3"></div>
    </div>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <!-- Top Bar -->
                <div class="top-bar">
                    <div class="top-bar-left">
                        <a asp-action="Index" asp-controller="Testimonial" class="back-link">
                            <i class="bi bi-arrow-left-circle-fill"></i>
                            <span>Tüm Yorumlar</span>
                        </a>
                    </div>
                    <div class="top-bar-center">
                        <div class="status-indicator">
                            <span class="status-dot"></span>
                            <span class="status-text">Düzenleme Modunda</span>
                        </div>
                    </div>
                    <div class="top-bar-right">
                        <button type="button"
                                class="danger-action-btn"
                                onclick="if(confirm('Bu yorumu silmek istediğinizden emin misiniz?')) window.location.href='@Url.Action("Delete", "Testimonial", new { id = Model.TestimonialId })'">
                            <i class="bi bi-trash3-fill"></i>
                            <span>Yorumu Sil</span>
                        </button>
                    </div>
                </div>

                <!-- Main Update Card -->
                <div class="update-main-card">
                    <form method="post" asp-action="Update" asp-controller="Testimonial" id="updateForm">
                        <input type="hidden" asp-for="TestimonialId" />

                        <div class="row g-4">
                            <!-- Left Column - Form -->
                            <div class="col-lg-7">
                                <div class="form-container">
                                    <!-- ID Banner -->
                                    <div class="id-banner">
                                        <div class="id-icon">
                                            <i class="bi bi-fingerprint"></i>
                                        </div>
                                        <div class="id-content">
                                            <span class="id-label">Yorum ID</span>
                                            <span class="id-value">#@Model.TestimonialId</span>
                                        </div>
                                    </div>

                                    <!-- Customer Name Field -->
                                    <div class="field-group">
                                        <div class="field-header">
                                            <div class="field-icon">
                                                <i class="bi bi-person-circle"></i>
                                            </div>
                                            <div class="field-info">
                                                <label class="field-label">Müşteri Ad Soyad</label>
                                                <span class="field-desc">Yorumu yapan kişinin tam adı</span>
                                            </div>
                                        </div>
                                        <div class="field-input-wrapper">
                                            <input type="text"
                                                   class="field-input"
                                                   asp-for="NameSurname"
                                                   placeholder="Ad Soyad giriniz..."
                                                   required />
                                            <div class="field-focus-line"></div>
                                        </div>
                                    </div>

                                    <!-- Comment Field -->
                                    <div class="field-group">
                                        <div class="field-header">
                                            <div class="field-icon">
                                                <i class="bi bi-chat-text-fill"></i>
                                            </div>
                                            <div class="field-info">
                                                <label class="field-label">Müşteri Yorumu</label>
                                                <span class="field-desc">Detaylı ve samimi yorum metni</span>
                                            </div>
                                        </div>
                                        <div class="field-input-wrapper">
                                            <textarea class="field-input field-textarea"
                                                      asp-for="Comment"
                                                      rows="10"
                                                      placeholder="Yorum içeriğini giriniz..."
                                                      maxlength="500"
                                                      required></textarea>
                                            <div class="field-focus-line"></div>
                                        </div>
                                        <div class="field-footer">
                                            <span class="field-hint">
                                                <i class="bi bi-stars"></i>
                                                Özgün ve gerçek yorumlar daha değerlidir
                                            </span>
                                            <span class="char-display" id="charDisplay">
                                                @(Model.Comment?.Length ?? 0) / 500
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="action-bar">
                                        <button type="button" onclick="history.back()" class="action-btn cancel">
                                            <i class="bi bi-x-lg"></i>
                                            <span>İptal</span>
                                        </button>
                                        <button type="button" onclick="location.reload()" class="action-btn reset">
                                            <i class="bi bi-arrow-clockwise"></i>
                                            <span>Sıfırla</span>
                                        </button>
                                        <button type="submit" class="action-btn save">
                                            <span class="btn-glow"></span>
                                            <i class="bi bi-check2-circle"></i>
                                            <span>Değişiklikleri Kaydet</span>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column - Preview -->
                            <div class="col-lg-5">
                                <div class="preview-container">
                                    <div class="preview-header">
                                        <i class="bi bi-eye-fill"></i>
                                        <span>Canlı Önizleme</span>
                                    </div>

                                    <div class="preview-content">
                                        <div class="preview-testimonial-card">
                                            <div class="preview-quote-mark">
                                                <i class="bi bi-quote"></i>
                                            </div>

                                            <div class="preview-customer-section">
                                                <div class="preview-avatar" id="previewAvatar">
                                                    @Model.NameSurname.Substring(0, 1).ToUpper()
                                                </div>
                                                <div class="preview-customer-info">
                                                    <h4 class="preview-name" id="previewName">@Model.NameSurname</h4>
                                                    <span class="preview-role">Müşteri</span>
                                                    <div class="preview-stars">
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="preview-comment-box">
                                                <p class="preview-comment-text" id="previewComment">
                                                    @Model.Comment
                                                </p>
                                            </div>

                                            <div class="preview-meta">
                                                <i class="bi bi-clock"></i>
                                                <span>Yayınlanma Tarihi</span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Quick Info -->
                                    <div class="quick-info-box">
                                        <div class="info-item">
                                            <i class="bi bi-info-circle-fill"></i>
                                            <span>Değişiklikler anında önizlemede görünür</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="bi bi-shield-check"></i>
                                            <span>Tüm yorumlar otomatik kaydedilir</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Tips Card -->
                <div class="tips-card">
                    <div class="tips-icon">
                        <i class="bi bi-lightbulb-fill"></i>
                    </div>
                    <div class="tips-content">
                        <h5 class="tips-title">Düzenleme İpuçları</h5>
                        <ul class="tips-list">
                            <li><i class="bi bi-check2"></i> Yorumun orijinalliğini koruyun</li>
                            <li><i class="bi bi-check2"></i> Müşteri adını doğru yazın</li>
                            <li><i class="bi bi-check2"></i> Yorum metninin anlamlı olmasına dikkat edin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .update-testimonial-wrapper {
        min-height: 100vh;
        background: #0f172a;
        position: relative;
        overflow: hidden;
    }

    .gradient-mesh {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .mesh-layer {
        position: absolute;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, transparent 0%, transparent 100%);
        animation: mesh-animation 20s ease-in-out infinite;
    }

    .layer-1 {
        background: radial-gradient(circle at 30% 50%, rgba(102, 126, 234, 0.3) 0%, transparent 50%);
        animation-delay: 0s;
    }

    .layer-2 {
        background: radial-gradient(circle at 70% 50%, rgba(118, 75, 162, 0.3) 0%, transparent 50%);
        animation-delay: 7s;
    }

    .layer-3 {
        background: radial-gradient(circle at 50% 80%, rgba(139, 92, 246, 0.2) 0%, transparent 50%);
        animation-delay: 14s;
    }

    @@keyframes mesh-animation {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        33% {
            transform: translate(30px, -30px) scale(1.1);
        }

        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .back-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: white;
        text-decoration: none;
        font-weight: 600;
        padding: 0.75rem 1.25rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .back-link:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateX(-3px);
            color: white;
        }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1.25rem;
        background: rgba(16, 185, 129, 0.2);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 12px;
    }

    .status-dot {
        width: 10px;
        height: 10px;
        background: #10b981;
        border-radius: 50%;
        animation: pulse-dot 2s ease-in-out infinite;
    }

    @@keyframes pulse-dot {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.5;
            transform: scale(1.2);
        }
    }

    .status-text {
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .danger-action-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1.25rem;
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 12px;
        color: #fca5a5;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .danger-action-btn:hover {
            background: #ef4444;
            color: white;
            transform: translateY(-2px);
        }

    .update-main-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .form-container {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    }

    .id-banner {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        margin-bottom: 2rem;
        color: white;
    }

    .id-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }

    .id-label {
        display: block;
        font-size: 0.85rem;
        opacity: 0.9;
        margin-bottom: 0.25rem;
    }

    .id-value {
        display: block;
        font-size: 1.8rem;
        font-weight: 800;
    }

    .field-group {
        margin-bottom: 2.5rem;
    }

    .field-header {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .field-icon {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .field-label {
        display: block;
        font-size: 1.1rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.25rem;
    }

    .field-desc {
        font-size: 0.85rem;
        color: #64748b;
    }

    .field-input-wrapper {
        position: relative;
    }

    .field-input {
        width: 100%;
        padding: 1.25rem 1.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1rem;
        color: #1e293b;
        transition: all 0.3s ease;
        background: white;
    }

        .field-input:focus {
            outline: none;
            border-color: transparent;
            background: #f8f9ff;
        }

            .field-input:focus + .field-focus-line {
                width: 100%;
            }

    .field-focus-line {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        transition: width 0.3s ease;
        border-radius: 12px;
    }

    .field-textarea {
        resize: vertical;
        min-height: 180px;
        line-height: 1.8;
        font-family: inherit;
    }

    .field-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 0.75rem;
    }

    .field-hint {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: #64748b;
    }

        .field-hint i {
            color: #f59e0b;
        }

    .char-display {
        font-size: 0.9rem;
        font-weight: 700;
        color: #667eea;
    }

    .action-bar {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #f1f5f9;
    }

    .action-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.75rem;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .action-btn.cancel {
            background: #f1f5f9;
            color: #64748b;
        }

            .action-btn.cancel:hover {
                background: #e2e8f0;
                transform: translateY(-2px);
            }

        .action-btn.reset {
            background: #fef3c7;
            color: #d97706;
        }

            .action-btn.reset:hover {
                background: #fde68a;
                transform: translateY(-2px);
            }

        .action-btn.save {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

            .action-btn.save:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
            }

    .btn-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
        transform: scale(0);
        transition: transform 0.6s ease;
    }

    .action-btn.save:hover .btn-glow {
        transform: scale(1);
    }

    .preview-container {
        position: sticky;
        top: 2rem;
    }

    .preview-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px 15px 0 0;
        color: white;
        font-weight: 700;
    }

    .preview-content {
        background: rgba(255, 255, 255, 0.98);
        padding: 2rem;
        border-radius: 0 0 15px 15px;
    }

    .preview-testimonial-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .preview-quote-mark {
        position: absolute;
        top: -15px;
        right: 20px;
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .preview-customer-section {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .preview-avatar {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        font-weight: 700;
        flex-shrink: 0;
    }

    .preview-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 0.25rem 0;
    }

    .preview-role {
        display: inline-block;
        font-size: 0.8rem;
        color: #667eea;
        background: #f0f4ff;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-weight: 600;
    }

    .preview-stars {
        margin-top: 0.5rem;
        color: #fbbf24;
    }

    .preview-comment-box {
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 12px;
        border-left: 4px solid #667eea;
        margin-bottom: 1rem;
    }

    .preview-comment-text {
        font-size: 1rem;
        color: #475569;
        line-height: 1.7;
        font-style: italic;
        margin: 0;
    }

    .preview-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #94a3b8;
        font-size: 0.85rem;
    }

    .quick-info-box {
        margin-top: 1.5rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        margin-bottom: 0.75rem;
    }

        .info-item:last-child {
            margin-bottom: 0;
        }

        .info-item i {
            color: #10b981;
            font-size: 1.1rem;
        }

    .tips-card {
        margin-top: 2rem;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        display: flex;
        gap: 1.5rem;
        color: white;
    }

    .tips-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        flex-shrink: 0;
    }

    .tips-title {
        font-size: 1.2rem;
        font-weight: 700;
        margin: 0 0 1rem 0;
    }

    .tips-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .tips-list li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
            opacity: 0.9;
        }

            .tips-list li i {
                color: #10b981;
                font-size: 1.1rem;
            }

    @@media (max-width: 992px) {
        .action-bar {
            flex-wrap: wrap;
        }

        .action-btn {
            flex: 1 1 100%;
            justify-content: center;
        }

        .top-bar {
            flex-direction: column;
        }
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.querySelector('input[asp-for="NameSurname"]');
            const commentInput = document.querySelector('textarea[asp-for="Comment"]');
            const previewName = document.getElementById('previewName');
            const previewAvatar = document.getElementById('previewAvatar');
            const previewComment = document.getElementById('previewComment');
            const charDisplay = document.getElementById('charDisplay');

            // Update preview on input
            nameInput.addEventListener('input', function() {
                const name = this.value.trim();
                if (name) {
                    previewName.textContent = name;
                    previewAvatar.textContent = name.substring(0, 1).toUpperCase();
                }
            });

            commentInput.addEventListener('input', function() {
                const comment = this.value.trim();
                const length = this.value.length;

                charDisplay.textContent = length + ' / 500';

                if (comment) {
                    previewComment.textContent = comment;
                }
            });

            // Initial character count
            charDisplay.textContent = commentInput.value.length + ' / 500';
        });
    </script>
}

